{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["DOM", "ES2020"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "strictNullChecks": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}